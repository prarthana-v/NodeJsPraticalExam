<%- include('../components/header') %>
<div class="page-wrapper">
  <!-- ============================================================== -->
  <!-- Bread crumb and right sidebar toggle -->
  <!-- ============================================================== -->
  <div class="page-breadcrumb pb-5">
    <div class="container mt-5 bg-light border shadow">
      <% if(locals.success !="" ) { %>
      <div class="alert alert-success alert-dismissible fade show" role="alert">
        <%= locals.success %>
      </div>
      <% } %>
      <form action="/state/update" method="post" class="form-horizontal">
        <div class="card-body">
          <h4 class="card-title">Edit state</h4>
          <input type="hidden" name="id" value="<%= single._id %>" />
          <div class="form-group row">
            <label
              for="fname"
              class="col-sm-3 text-end control-label col-form-label"
              >country</label
            >

            <div class="col-sm-9">
              <select name="country" id="" class="form-control" value="">
                <% country.map((c,i)=>{ %>
                <option <% if(c.country == single.countryId.country) { %> 
                  selected  <% } %>  value="<%= c._id %>"><%= c.country %></option>
                <% }) %>
              </select>
            </div>
          </div>
          <div class="form-group row">
            <label
              for="fname"
              class="col-sm-3 text-end control-label col-form-label"
              >state</label
            >

            <div class="col-sm-9">
              <input
                type="text"
                name="state"
                class="form-control"
                id="fname"
                value="<%= single.state %>"
                placeholder="state Name Here"
              />
            </div>
            <input type="hidden" name="status" value="<%= single.status %>" />
          </div>
        </div>
        <div class="border-top">
          <div class="card-body">
            <button type="submit" class="btn btn-primary">Submit</button>
            <a href="/state" class="btn btn-info">View</a>
          </div>
        </div>
      </form>
    </div>
  </div>

  <%- include('../components/footer') %>
</div>
